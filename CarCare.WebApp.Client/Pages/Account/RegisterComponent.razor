@page "/Account/Register"

@inject IStringLocalizer<RegisterComponent> Loc

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-0 text-white"> @Loc["Signup"]</h4>
            </div>
            <div class="card-body">
                <EditForm Model="ViewModel" OnValidSubmit="OnValidSubmitAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-group">
                                    <label class="control-label">@Loc["FirstName"]</label>
                                    <InputText class="form-control" @bind-Value="ViewModel.FirstName" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-group">
                                    <label class="control-label">@Loc["SecondName"]</label>
                                    <InputText class="form-control" @bind-Value="ViewModel.SecondName" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-group">
                                    <label class="control-label">@Loc["PhoneNumber"]</label>
                                    <InputText class="form-control" @bind-Value="ViewModel.PhoneNumber" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-group">
                                    <label class="control-label">@Loc["Password"]</label>
                                    <InputText type="password" class="form-control" @bind-Value="ViewModel.Password" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="form-group">
                                    <label class="control-label">@Loc["Role"]</label>

                                    <InputSelect @bind-Value="ViewModel.RoleId" class="custom-select">
                                        @foreach (var item in Roles)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-info"> <i class="fa fa-check"></i> @Loc["Register"] </button>
                            <button type="reset" class="btn btn-dark">@Loc["Cancel"]</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>