@page "/Setting/Index"

@inject IStringLocalizer<IndexComponent> Loc

@attribute [Authorize]


<AuthorizeView Roles="Admin">
    <Authorized>
        <a href="/Setting/Add" class="btn btn-outline-primary">@Loc["Add"]</a>
    </Authorized>
</AuthorizeView>

<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Loc["SettingIndex"]</h4>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th width=20px>#</th>
                                <th>@Loc["KilometerMin"]</th>
                                <th>@Loc["KilometerMax"]</th>
                                <th>@Loc["KilometerRate"]</th>
                                <th>@Loc["Service"]</th>
                                <th>@Loc["Cartype"]</th>
                                <th>@Loc["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            <Virtualize TItem="CarCareApplication.Core.Shared.ViewModels.SettingModels.IndexSettingViewModel" Items="ItemsSource" Context="Item">
                                <tr>
                                    <td>@Item.Id</td>
                                    <td>@Item.KilometerMin</td>
                                    <td>@Item.KilometerMax</td>
                                    <td>@Item.KilometerRate</td>
                                    <td>@Item.Service</td>
                                    <td>@Item.CarType</td>
                                    <td>
                                        <AuthorizeView Roles="Admin">
                                            <Authorized>
                                                <a href="/Setting/Edit/@Item.Id" class="btn btn-outline-warning">@Loc["Edit"]</a>
                                            </Authorized>
                                            <NotAuthorized>
                                                <p>@Loc["NoActions"]</p>
                                            </NotAuthorized>
                                        </AuthorizeView>
                                    </td>
                                </tr>
                            </Virtualize>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>