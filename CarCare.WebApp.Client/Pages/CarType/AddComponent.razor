@page "/CarType/Add"

@inject IStringLocalizer<AddComponent> Loc

@attribute [Authorize(Roles = "Admin")]

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-0 text-white">@Loc["AddCarType"]</h4>
            </div>
            <div class="card-body">
                <EditForm Model="ViewModel" OnValidSubmit="OnValidSubmitAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-body">
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">@Loc["EnglishName"]</label>
                                    <InputText class="form-control" @bind-Value="ViewModel.NameEN" />
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">@Loc["ArabicName"]</label>
                                    <InputText class="form-control" @bind-Value="ViewModel.NameAR" />
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@Loc["EnglishDescription"] </label>
                                    <InputTextArea class="form-control" @bind-Value="ViewModel.DescriptionEN" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@Loc["ArabicDescription"] </label>
                                    <InputTextArea class="form-control" @bind-Value="ViewModel.DescriptionAR" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="custom-control custom-switch">
                                    <InputCheckbox class="custom-control-input" id="customSwitch1" @bind-Value="ViewModel.IsEnabled" />
                                    <label class="custom-control-label" for="customSwitch1">@Loc["EnableOrDisable"]</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-info"> <i class="fa fa-check"></i> @Loc["Save"]</button>
                            <button type="reset" class="btn btn-dark"> @Loc["Cancel"]</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>